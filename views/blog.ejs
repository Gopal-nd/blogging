<!doctype html>
<html lang="en">
    <head>
        <%- include('./partial/head.ejs') %>
        <title>Blog</title>
    </head>
    
    <body>
        <%- include('./partial/nav.ejs') %>


    <div class="container mt-3">
        <center>

            <h1><%= blogs.title%></h1>
            <img src="/<%= blogs.coverImage %>" width="700px" height="500px" alt="image">
        </center>
       

            <pre><%= blogs.body%></pre>
        
    </div>

    <div class="container mt-3">
     
   
            <img src="https://img.freepik.com/free-psd/3d-illustration-human-avatar-profile_23-2150671142.jpg?size=626&ext=jpg" width="80px" height="80px" alt="image">
            <!-- <img src="<%= blogs.createdBy.profileImage %>" width="80px" height="500px" alt="image"> -->
            <span style="font-size: 16px; font-weight: bold;"><%= blogs.createdBy.fullName %></span>
            <br>
            <span style="font-size: 14px; color: #777;"><%= new Date(blogs.createdAt).toLocaleString() %></span>
       
       

            
        
    </div>
        
    <div class="container mt-3">
     <h1> Comments (<%= comments.length %>)</h1>
     
     <% if(locals.user){ %>
        <form action="/blog/comment/<%= blogs._id%>" method="post">
               
            
            <input type="text" id="email" name="content" style="width: 100%; padding: 10px; margin-bottom: 15px; border: 1px solid #cccccc; border-radius: 5px;" placeholder="Enter comment..">
            
            
            <button type="submit" style=" padding: 10px; background-color: #007BFF; color: #ffffff; border: none; border-radius: 5px; cursor: pointer;">Comment</button>
        </form>
        <div class="mt-3">
            <% comments.forEach(comment => { %>
                <div style="margin-bottom: 20px; padding: 10px; border: 1px solid #ccc; border-radius: 8px;">
                    <img src="https://img.freepik.com/free-psd/3d-illustration-human-avatar-profile_23-2150671142.jpg?size=626&ext=jpg" 
                         width="80px" height="80px" alt="image" 
                         style="border-radius: 50%; margin-right: 10px; vertical-align: middle;">
                    <div style="display: inline-block; vertical-align: middle;">
                        <span style="font-size: 16px; font-weight: bold;"><%= comment.createdBy.fullName %></span>
                        <br>
                        <span style="font-size: 14px; color: #777;"><%= new Date(comment.createdAt).toLocaleString() %></span>
                    </div>
                    <h3 style="margin-top: 10px; font-size: 18px; color: #333;"><%= comment.content %></h3>
                </div>
            <% }); %>
            
            
        </div>
   <% } %>

        
    
</div>
        <%- include('./partial/scripts.ejs') %>
  </body>
</html>